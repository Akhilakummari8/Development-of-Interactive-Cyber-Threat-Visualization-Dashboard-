!pip install opencv-python
import cv2
from google.colab.patches import cv2_imshow
from google.colab import files
import os

# Upload the image if it doesn't exist
image_name = "group.jpg"
if not os.path.exists(image_name):
    uploaded = files.upload()
    if image_name not in uploaded:
        print(f"Error: '{image_name}' not uploaded. Please upload the image or change the image_name variable.")
    else:
        print(f"'{image_name}' uploaded successfully.")

# Load the Haar Cascade face detector
face_cascade = cv2.CascadeClassifier(
    cv2.data.haarcascades + "haarcascade_frontalface_default.xml"
)

# Read the image
image = cv2.imread(image_name)

# Check if image was loaded successfully
if image is None:
    print(f"Error: Could not load image '{image_name}'. Please ensure the file exists and is a valid image.")
else:
    gray = cv2.cvtColor(image, cv2.COLOR_BGR2GRAY)

    # Detect faces
    faces = face_cascade.detectMultiScale(
        gray,
        scaleFactor=1.2,
        minNeighbors=5,
        minSize=(60, 60)
    )

    # Draw rectangles around faces
    for (x, y, w, h) in faces:
        cv2.rectangle(image, (x, y), (x + w, y + h), (0, 255, 1), 6)

    # Show the output
    cv2_imshow(image)
    cv2.waitKey(0)
    cv2.destroyAllWindows()
